{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "DynamoDB table for StablePay early access submissions",
  "Parameters": {
    "env": {
      "Type": "String"
    }
  },
  "Resources": {
    "stablepaydynamodb": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": {
          "Fn::If": [
            "ShouldNotCreateEnvResources",
            "stablepaydynamodb",
            {
              "Fn::Sub": [
                "stablepaydynamodb${env}",
                {
                  "env": {
                    "Ref": "env"
                  }
                }
              ]
            }
          ]
        },
        "AttributeDefinitions": [
          {
            "AttributeName": "email",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "email",
            "KeyType": "HASH"
          }
        ],
        "BillingMode": "PAY_PER_REQUEST",
        "PointInTimeRecoverySpecification": {
          "PointInTimeRecoveryEnabled": true
        },
        "Tags": [
          {
            "Key": "Environment",
            "Value": {
              "Ref": "env"
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "Name": {
      "Value": {
        "Ref": "stablepaydynamodb"
      }
    },
    "Arn": {
      "Value": {
        "Fn::GetAtt": [
          "stablepaydynamodb",
          "Arn"
        ]
      }
    },
    "Region": {
      "Value": {
        "Ref": "AWS::Region"
      }
    }
  },
  "Conditions": {
    "ShouldNotCreateEnvResources": {
      "Fn::Equals": [
        {
          "Ref": "env"
        },
        "NONE"
      ]
    }
  }
}
