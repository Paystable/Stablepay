{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "API Gateway for StablePay",
  "Parameters": {
    "env": {
      "Type": "String"
    },
    "stablepayapifunctionName": {
      "Type": "String",
      "Default": "stablepayapifunction"
    },
    "stablepayapifunctionArn": {
      "Type": "String"
    }
  },
  "Resources": {
    "stablepayapi": {
      "Type": "AWS::ApiGateway::RestApi",
      "Properties": {
        "Name": {
          "Fn::If": [
            "ShouldNotCreateEnvResources",
            "stablepayapi",
            {
              "Fn::Sub": [
                "stablepayapi${env}",
                {
                  "env": {
                    "Ref": "env"
                  }
                }
              ]
            }
          ]
        },
        "Description": "API Gateway for StablePay",
        "EndpointConfiguration": {
          "Types": ["REGIONAL"]
        }
      }
    },
    "stablepayapiDeployment": {
      "Type": "AWS::ApiGateway::Deployment",
      "DependsOn": [
        "stablepayapiMethod1",
        "stablepayapiMethod2",
        "stablepayapiMethod3",
        "stablepayapiMethod4",
        "stablepayapiMethod5",
        "stablepayapiMethod6",
        "stablepayapiMethod7",
        "stablepayapiMethod8"
      ],
      "Properties": {
        "RestApiId": {
          "Ref": "stablepayapi"
        },
        "StageName": {
          "Ref": "env"
        }
      }
    },
    "stablepayapiResource1": {
      "Type": "AWS::ApiGateway::Resource",
      "Properties": {
        "RestApiId": {
          "Ref": "stablepayapi"
        },
        "ParentId": {
          "Fn::GetAtt": [
            "stablepayapi",
            "RootResourceId"
          ]
        },
        "PathPart": "api"
      }
    },
    "stablepayapiResource2": {
      "Type": "AWS::ApiGateway::Resource",
      "Properties": {
        "RestApiId": {
          "Ref": "stablepayapi"
        },
        "ParentId": {
          "Ref": "stablepayapiResource1"
        },
        "PathPart": "early-access"
      }
    },
    "stablepayapiResource3": {
      "Type": "AWS::ApiGateway::Resource",
      "Properties": {
        "RestApiId": {
          "Ref": "stablepayapi"
        },
        "ParentId": {
          "Ref": "stablepayapiResource2"
        },
        "PathPart": "submit"
      }
    },
    "stablepayapiResource4": {
      "Type": "AWS::ApiGateway::Resource",
      "Properties": {
        "RestApiId": {
          "Ref": "stablepayapi"
        },
        "ParentId": {
          "Ref": "stablepayapiResource2"
        },
        "PathPart": "submissions"
      }
    },
    "stablepayapiResource5": {
      "Type": "AWS::ApiGateway::Resource",
      "Properties": {
        "RestApiId": {
          "Ref": "stablepayapi"
        },
        "ParentId": {
          "Ref": "stablepayapiResource2"
        },
        "PathPart": "stats"
      }
    },
    "stablepayapiResource6": {
      "Type": "AWS::ApiGateway::Resource",
      "Properties": {
        "RestApiId": {
          "Ref": "stablepayapi"
        },
        "ParentId": {
          "Ref": "stablepayapiResource4"
        },
        "PathPart": "{id}"
      }
    },
    "stablepayapiMethod1": {
      "Type": "AWS::ApiGateway::Method",
      "Properties": {
        "RestApiId": {
          "Ref": "stablepayapi"
        },
        "ResourceId": {
          "Ref": "stablepayapiResource3"
        },
        "HttpMethod": "POST",
        "AuthorizationType": "NONE",
        "Integration": {
          "Type": "AWS_PROXY",
          "IntegrationHttpMethod": "POST",
          "Uri": {
            "Fn::Sub": [
              "arn:aws:apigateway:${AWS::Region}:lambda:path/2015-03-31/functions/${stablepayapifunctionArn}/invocations",
              {
                "stablepayapifunctionArn": {
                  "Ref": "stablepayapifunctionArn"
                }
              }
            ]
          }
        }
      }
    },
    "stablepayapiMethod2": {
      "Type": "AWS::ApiGateway::Method",
      "Properties": {
        "RestApiId": {
          "Ref": "stablepayapi"
        },
        "ResourceId": {
          "Ref": "stablepayapiResource3"
        },
        "HttpMethod": "OPTIONS",
        "AuthorizationType": "NONE",
        "Integration": {
          "Type": "MOCK",
          "IntegrationResponses": [
            {
              "StatusCode": 200,
              "ResponseParameters": {
                "method.response.header.Access-Control-Allow-Headers": "'Content-Type,X-Amz-Date,Authorization,X-Api-Key,X-Amz-Security-Token'",
                "method.response.header.Access-Control-Allow-Origin": "'*'",
                "method.response.header.Access-Control-Allow-Methods": "'POST,OPTIONS'"
              }
            }
          ],
          "RequestTemplates": {
            "application/json": "{\"statusCode\": 200}"
          }
        },
        "MethodResponses": [
          {
            "StatusCode": 200,
            "ResponseParameters": {
              "method.response.header.Access-Control-Allow-Headers": true,
              "method.response.header.Access-Control-Allow-Origin": true,
              "method.response.header.Access-Control-Allow-Methods": true
            }
          }
        ]
      }
    },
    "stablepayapiMethod3": {
      "Type": "AWS::ApiGateway::Method",
      "Properties": {
        "RestApiId": {
          "Ref": "stablepayapi"
        },
        "ResourceId": {
          "Ref": "stablepayapiResource4"
        },
        "HttpMethod": "GET",
        "AuthorizationType": "NONE",
        "Integration": {
          "Type": "AWS_PROXY",
          "IntegrationHttpMethod": "POST",
          "Uri": {
            "Fn::Sub": [
              "arn:aws:apigateway:${AWS::Region}:lambda:path/2015-03-31/functions/${stablepayapifunctionArn}/invocations",
              {
                "stablepayapifunctionArn": {
                  "Ref": "stablepayapifunctionArn"
                }
              }
            ]
          }
        }
      }
    },
    "stablepayapiMethod4": {
      "Type": "AWS::ApiGateway::Method",
      "Properties": {
        "RestApiId": {
          "Ref": "stablepayapi"
        },
        "ResourceId": {
          "Ref": "stablepayapiResource4"
        },
        "HttpMethod": "OPTIONS",
        "AuthorizationType": "NONE",
        "Integration": {
          "Type": "MOCK",
          "IntegrationResponses": [
            {
              "StatusCode": 200,
              "ResponseParameters": {
                "method.response.header.Access-Control-Allow-Headers": "'Content-Type,X-Amz-Date,Authorization,X-Api-Key,X-Amz-Security-Token'",
                "method.response.header.Access-Control-Allow-Origin": "'*'",
                "method.response.header.Access-Control-Allow-Methods": "'GET,OPTIONS'"
              }
            }
          ],
          "RequestTemplates": {
            "application/json": "{\"statusCode\": 200}"
          }
        },
        "MethodResponses": [
          {
            "StatusCode": 200,
            "ResponseParameters": {
              "method.response.header.Access-Control-Allow-Headers": true,
              "method.response.header.Access-Control-Allow-Origin": true,
              "method.response.header.Access-Control-Allow-Methods": true
            }
          }
        ]
      }
    },
    "stablepayapiMethod5": {
      "Type": "AWS::ApiGateway::Method",
      "Properties": {
        "RestApiId": {
          "Ref": "stablepayapi"
        },
        "ResourceId": {
          "Ref": "stablepayapiResource5"
        },
        "HttpMethod": "GET",
        "AuthorizationType": "NONE",
        "Integration": {
          "Type": "AWS_PROXY",
          "IntegrationHttpMethod": "POST",
          "Uri": {
            "Fn::Sub": [
              "arn:aws:apigateway:${AWS::Region}:lambda:path/2015-03-31/functions/${stablepayapifunctionArn}/invocations",
              {
                "stablepayapifunctionArn": {
                  "Ref": "stablepayapifunctionArn"
                }
              }
            ]
          }
        }
      }
    },
    "stablepayapiMethod6": {
      "Type": "AWS::ApiGateway::Method",
      "Properties": {
        "RestApiId": {
          "Ref": "stablepayapi"
        },
        "ResourceId": {
          "Ref": "stablepayapiResource5"
        },
        "HttpMethod": "OPTIONS",
        "AuthorizationType": "NONE",
        "Integration": {
          "Type": "MOCK",
          "IntegrationResponses": [
            {
              "StatusCode": 200,
              "ResponseParameters": {
                "method.response.header.Access-Control-Allow-Headers": "'Content-Type,X-Amz-Date,Authorization,X-Api-Key,X-Amz-Security-Token'",
                "method.response.header.Access-Control-Allow-Origin": "'*'",
                "method.response.header.Access-Control-Allow-Methods": "'GET,OPTIONS'"
              }
            }
          ],
          "RequestTemplates": {
            "application/json": "{\"statusCode\": 200}"
          }
        },
        "MethodResponses": [
          {
            "StatusCode": 200,
            "ResponseParameters": {
              "method.response.header.Access-Control-Allow-Headers": true,
              "method.response.header.Access-Control-Allow-Origin": true,
              "method.response.header.Access-Control-Allow-Methods": true
            }
          }
        ]
      }
    },
    "stablepayapiMethod7": {
      "Type": "AWS::ApiGateway::Method",
      "Properties": {
        "RestApiId": {
          "Ref": "stablepayapi"
        },
        "ResourceId": {
          "Ref": "stablepayapiResource6"
        },
        "HttpMethod": "PUT",
        "AuthorizationType": "NONE",
        "Integration": {
          "Type": "AWS_PROXY",
          "IntegrationHttpMethod": "POST",
          "Uri": {
            "Fn::Sub": [
              "arn:aws:apigateway:${AWS::Region}:lambda:path/2015-03-31/functions/${stablepayapifunctionArn}/invocations",
              {
                "stablepayapifunctionArn": {
                  "Ref": "stablepayapifunctionArn"
                }
              }
            ]
          }
        }
      }
    },
    "stablepayapiMethod8": {
      "Type": "AWS::ApiGateway::Method",
      "Properties": {
        "RestApiId": {
          "Ref": "stablepayapi"
        },
        "ResourceId": {
          "Ref": "stablepayapiResource6"
        },
        "HttpMethod": "DELETE",
        "AuthorizationType": "NONE",
        "Integration": {
          "Type": "AWS_PROXY",
          "IntegrationHttpMethod": "POST",
          "Uri": {
            "Fn::Sub": [
              "arn:aws:apigateway:${AWS::Region}:lambda:path/2015-03-31/functions/${stablepayapifunctionArn}/invocations",
              {
                "stablepayapifunctionArn": {
                  "Ref": "stablepayapifunctionArn"
                }
              }
            ]
          }
        }
      }
    },
    "stablepayapiLambdaPermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "FunctionName": {
          "Ref": "stablepayapifunctionName"
        },
        "Action": "lambda:InvokeFunction",
        "Principal": "apigateway.amazonaws.com",
        "SourceArn": {
          "Fn::Sub": [
            "arn:aws:execute-api:${AWS::Region}:${AWS::AccountId}:${stablepayapi}/*",
            {
              "stablepayapi": {
                "Ref": "stablepayapi"
              }
            }
          ]
        }
      }
    }
  },
  "Outputs": {
    "RootUrl": {
      "Value": {
        "Fn::Sub": [
          "https://${stablepayapi}.execute-api.${AWS::Region}.amazonaws.com/${env}",
          {
            "stablepayapi": {
              "Ref": "stablepayapi"
            }
          }
        ]
      }
    },
    "ApiName": {
      "Value": {
        "Ref": "stablepayapi"
      }
    },
    "ApiId": {
      "Value": {
        "Ref": "stablepayapi"
      }
    }
  },
  "Conditions": {
    "ShouldNotCreateEnvResources": {
      "Fn::Equals": [
        {
          "Ref": "env"
        },
        "NONE"
      ]
    }
  }
}
